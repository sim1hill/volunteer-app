
<div class="content-40mg">
        <div class="container">

          <div class="row">

            <!-- Begin Login -->
            <div class="col-sm-6">
              <div class="panel no-margin panel-default">
                  <div class="panel-heading">Login to your account</div>
                  <div class="panel-body">
                      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html:{ role: 'form'}) do |f| %>
                          <div class="form-group">
                              <div class="input-group">
                                  <div class="input-group-addon"><span class="ion-android-mail" style="font-size:9px;"></span></div>
                                  <%= f.email_field :email, autofocus: true %>
                              </div>
                          </div>
                          <div class="form-group">
                            <div class="input-group">
                                  <div class="input-group-addon"><span class="ion-ios7-locked"></span></div>
                                <%= f.password_field :password, autocomplete: "off" %>
                              </div>
                          </div>
                         <% if devise_mapping.rememberable? -%>
                        <div class="checkbox">
                          <label><%= f.check_box :remember_me %>
                          Remember me
                          </label>
                      </div>
                        <% end %>
                          <hr class="mb20 mt15">
                          <%= f.submit "Log in", class: 'btn btn-rw btn-primary' %>
                        <% end %>
                         <%= render "devise/shared/links" %>
                  </div><!-- /panel body -->
              </div><!-- /panel -->
            </div><!-- /column-->
            <!-- End Login -->

          </div><!-- /row -->

        </div><!-- /container -->
      </div>





