<div class="row">
  <div class="col-xs-12 col-sm-4 col-sm-offset-1 mt10">
    <h1><%= @event.name %></h1>
    <h4><%= @event.formatted_start %> - <%= @event.formatted_end %></h4>

    <p><%= @event.description %></p>

    <% if current_user && current_user.events.include?(@event) %>
      <%= button_to 'Leave this event', "/events/#{@event.id}/leave", method: :patch, remote: true, class: 'btn btn-rw btn-primary btn-xs' %>
    <% elsif current_user %>
      <%= button_to "Join This Event!",  "/events/#{@event.id}/join-event", method: :patch, remote: true, class: 'btn btn-rw btn-primary btn-xs' %>
    <% end %>
     <hr class="mt20">
    <h4>There are <mark><%= @event.users.count %></mark> volunteers assisting with this event:</h4>
    <ul class="list-unstyled">
      <% @event.users.each do |user| %>
        <li><%= user.name %></li>
      <% end %>
    </ul>
  </div>

  <div class="col-xs-12 col-sm-5 col-sm-offset-1 mt10">
    <h4><%= @event.address %></h4>
    <div id="map-canvas"></div>
  </div>

</div><!-- /row -->
<div class="row mt40">
 <div class="cta-primary">
    <p class="text-white">Seeking volunteers who can help with:
    <% @event.skills.each_with_index do |skill, i| %>
      <% if i > 0 %>
        - <%= skill.name %>
      <% else %>
        <%= skill.name %>
      <% end %>  
    <% end %>
    </p>
  </div>
</div><!-- /row -->